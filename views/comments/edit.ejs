<h1>New comment</h1><%- include("../partials/header") %>

<h1 style="text-align: center; ">EDIT A COMMENT</h1>

<div class="row">

  <div style="width: 30%; margin: 25px auto;">
      <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
          <div class="form-group">
              <input class="form-control" type="text" value="<%=comment.text %>" name="comment[text]" placeholder="text">
          </div>
          <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
      </form>
      <a href="/campgrounds">Go Back</a>
  </div>
</div>


